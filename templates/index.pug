h2 Links

include ./partial/links.pug

.container
  .link-tile-group
    - var counter = 0
    - for (var x = 0; x < linkGroups.length; x++)
      - var groupName = linkGroups[x].name
      - for (var y = 0; y < linkGroups[x].links.length; y++)
        - var item = linkGroups[x].links[y]
        +resourcelink(item.title, groupName, item.href, item.type, 'link_' + counter++)

