mixin header(title, content, style)
  head
    meta(charset='utf-8')
    title=title
    meta(name='description' content=content)
    meta(name='author' content='Adam Veseck√Ω')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='HandheldFriendly' content='true')
