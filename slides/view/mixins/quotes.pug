mixin quote-doom()
    +mcontainer('Goodbye Quote')
        +frameShard.top-20p
            +quote('So you walk eternally through the shadow realms, standing against evil where all others falter. May your thirst for retribution never quench' +
                ', may the blood on your sword never dry, and may we never need you again.', 'Doom 4')(class="font-dos not-italic")

mixin quote-portal()
    +mcontainer('Goodbye Quote')
        +frameShard.top-20p
            +quote('In dangerous testing environments, the Enrichment Center promises to always provide useful advice.'+
            ' For instance, the floor here will kill you. Try to avoid it.', 'GLaDOS, Portal')(class="font-dos not-italic")

mixin quote-god-of-war()
    +mcontainer('Goodbye Quote')
        +frameShard.top-20p
            +quote('Hope is what makes us strong. It is why we are here. It is what we fight with when all else is lost.', 'God of War')(class="font-dos not-italic")

mixin quote-planescape()
    +mcontainer('Goodbye Quote')
        +frameShard.top-20p.width-50p.left-400
            +quote('The weak suffer. I endure.', 'Planescape Torment')(class="font-dos not-italic")

