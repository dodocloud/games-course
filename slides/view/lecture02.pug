doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug
include ./mixins/summary.pug

- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/hall_orange.jpg';


+header('Engines', 'Adam Vesecký', globalAssets + 'lectures/ic_lecture02.svg', themePath + 'theme_aph.scss')

.reveal
	.slides
		+title('Lecture 2', 'Engines', 'color-manhattan')
		+frameInbox('Literature')
			ul
				li
					a(href="https://www.amazon.co.uk/Engine-Architecture-Third-Jason-Gregory/dp/1138035459") Gregory, Json. 2018. Game Engine Architecture (3rd ed.)
			div.text-center
				img.height-500(src=globalAssets+'book_game_engine_arch.jpg')
		include ./chapters/engines_intro.pug
		include ./chapters/engines_loop.pug
		include ./chapters/engines_scene.pug
		include ./chapters/engines_input.pug
		include ./chapters/engines_memory.pug
		include ./chapters/engines_scripting.pug
		+summary_lecture02()
		+quote-portal()

+footer('Adam Vesecký (FIT CTU)', 'Architecture of Computer Games, Lecture 2: Engines')
script(src!='../../scripts/reveal-setup.js')
