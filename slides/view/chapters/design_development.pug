        .space-lg.mt-80
        .grid-rows-1.grid-cols-4.grid.gap-10.width-90p.mt-60.ml-80
            .fragment
                +gbGame2(imgAssets+'failure_daikatana.jpg', 'Daikatana')
            .fragment
                +gbGame2(imgAssets+'failure_spore.jpg', 'Spore')
            .fragment
                +gbGame2(imgAssets+'failure_duke.jpg', 'Duke Nukem Forever')
